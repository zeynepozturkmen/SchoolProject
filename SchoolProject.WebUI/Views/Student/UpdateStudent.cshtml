
@{
    Layout = null;
}
@using SchoolProject.WebUI.Model
@model TeacherRequestModel
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
</head>
<body>

    <div class="container">
        <h2>Öğrenci Güncelleme</h2>

        <form action="~/Student/UpdateStudent" method="post">
            <div class="form-group">
                <label for="email">Adı Soyad:</label>
                <input type="hidden" class="form-control" id="email" placeholder="Ad soyad giriniz" name="studentId" value="@Model.Student.Id">
                <input type="text" class="form-control" id="email" placeholder="Ad soyad giriniz" name="fullName" value="@Model.Student.FullName">
            </div>
            <div class="form-group">
                <label for="pwd">Adres:</label>
                <input type="text" class="form-control" id="pwd" placeholder="Adres giriniz" name="address" value="@Model.Student.Address">
            </div>
            <div class="form-group">
                <label for="pwd">Telefon:</label>
                <input type="text" class="form-control" id="pwd" placeholder="Telefon giriniz" name="phoneNumber" value="@Model.Student.PhoneNumber">
            </div>
            <div class="form-group">
                <label for="pwd">Email:</label>
                <input type="email" class="form-control" id="pwd" placeholder="Email giriniz" name="email" value="@Model.Student.Email">
            </div>
            <select class="form-control" name="teacherId">
                @foreach (var item in Model.Teachers)
                {
                    if (item.Id == Model.TeacherId)
                    {
                        <option selected value="@Model.TeacherId">@Model.Student.Teacher.FullName</option>
                    }
                    else
                    {
                        <option value="@item.Id">@item.FullName</option>
                    }
                }

            </select>
            <br />
            <select class="form-control" name="classroomId">
                @foreach (var item in Model.Classrooms)
                {
                    if (item.Id == @Model.ClassroomId)
                    {
                        <option selected value="@Model.ClassroomId">@Model.Student.Classroom.Name</option>
                    }
                    else
                    {
                        <option value="@item.Id">@item.Name</option>
                    }

                }

            </select>
            <br />
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </form>
    </div>

</body>
</html>

